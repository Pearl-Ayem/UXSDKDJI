<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:context="com.dji.FPVDemo.MapsActivity" />

    <RelativeLayout
        android:id="@+id/relLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_border"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/ic_magnify"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_magnify" />

        <EditText
            android:id="@+id/input_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:hint="Enter Address, City or Zip Code"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#000"
            android:textSize="15sp" />


    </RelativeLayout>

    <EditText
        android:id="@+id/origin"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:hint="Origin Coordinates"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white_border"
        android:layout_marginBottom="62dp"
        android:layout_marginLeft="@dimen/offline_map_dp_10_in_sw320dp"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="#000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/dest"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:hint="Destination Coordinates"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/white_border"
        android:layout_marginBottom="62dp"
        android:layout_marginRight="@dimen/offline_map_dp_10_in_sw320dp"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="#000"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/heading"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="@drawable/white_border"
        android:text="TextView" />


</RelativeLayout>